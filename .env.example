# =============================================================================
# GRAZE - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit your .env file to git!

# -----------------------------------------------------------------------------
# HARDHAT / BLOCKCHAIN
# -----------------------------------------------------------------------------

# Your deployer wallet private key (WITHOUT 0x prefix)
# Generate with: yarn generate
PRIVATE_KEY=your_private_key_here

# Alchemy API Key for RPC access
# Get yours at: https://dashboard.alchemyapi.io
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Etherscan API Key for contract verification
# Get yours at: https://etherscan.io/myapikey
ETHERSCAN_V2_API_KEY=your_etherscan_api_key_here

# -----------------------------------------------------------------------------
# NEXT.JS / FRONTEND
# -----------------------------------------------------------------------------

# WalletConnect Project ID (for RainbowKit)
# Get yours at: https://cloud.walletconnect.com
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Alchemy API Key for frontend RPC (can be same as above)
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key_here

# -----------------------------------------------------------------------------
# DEPLOYMENT
# -----------------------------------------------------------------------------

# Target network for deployment (baseSepolia or zama)
DEPLOY_NETWORK=baseSepolia

# Vercel deployment (optional)
VERCEL_TOKEN=your_vercel_token_here

